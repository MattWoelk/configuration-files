#mute and volume keys:
"amixer set Master toggle"
  m:0x10 + c:121
  Mod2 + XF86AudioMute
"amixer -c 0 set Master 1dB+ unmute"
  m:0x10 + c:123
  Mod2 + XF86AudioRaiseVolume
"amixer -c 0 set Master 1dB- unmute"
  m:0x10 + c:122
  Mod2 + XF86AudioLowerVolume
"amixer -c 0 set Master 7dB+ unmute"
  m:0x11 + c:123
  Shift+Mod2 + XF86AudioRaiseVolume
"amixer -c 0 set Master 7dB- unmute"
  m:0x11 + c:122
  Shift+Mod2 + XF86AudioLowerVolume

#sleep and suspend
"sudo pm-suspend"
  m:0x10 + c:150
  Mod2 + XF86Sleep
"sudo pm-hibernate"
  m:0x10 + c:213
  Mod2 + XF86Suspend

#play/pause stop, next, in cmus
"cmus-remote -u"
  m:0x0 + c:172
  XF86AudioPlay

"cmus-remote -s"
  m:0x0 + c:174
  XF86AudioStop

"cmus-remote -n"
  m:0x0 + c:171
  XF86AudioNext

"cmus-remote -r"
  m:0x0 + c:173
  XF86AudioPrev

