#keystate_numlock = enable
#keystate_capslock = enable
#keystate_scrolllock= enable

#banish the mouse to somewhere on the left
"xdotool mousemove 0 400"
    m:0x8 + c:56
        Alt + b

#Invert all screen colours
"xcalib -invert -alter"
    m:0x4c + c:17
    Control+Alt+Mod4 + 8
"xcalib -invert -alter"
    m:0x4c + c:17
    Control+Alt+Mod4+Mod5 + 8

#speak the selected text
"xclip -o | sed 's/\[.*\]//g' | sed 's/  / /g' | festival --tts"
    m:0xc + c:26
    Control+Alt + e

#take a quick picture using the webcam
"fswebcam --no-banner --resolution 1280x720 ~/Pictures/Webcam_$(date +%Y-%M-%d-%k-%M-%S).jpg"
    m:0x4c + c:10
    Control+Alt+Mod4 + 1
"fswebcam --no-banner --resolution 1280x720 ~/Pictures/Webcam_$(date +%Y-%M-%d-%k-%M-%S).jpg"
    m:0x4c + c:10
    Control+Alt+Mod4+Mod5 + 1

#screenshot the entire screen
"scrot ~/Pictures/Screenshot_$(date +%Y-%m-%d-%k:%M:%S).jpg"
    m:0x4c + c:12
    Control+Alt+Mod4 + 3
"scrot ~/Pictures/Screenshot_$(date +%Y-%m-%d-%k:%M:%S).jpg"
    m:0x4c + c:12
    Control+Alt+Mod4+Mod5 + 3
#screenshot a selection of the screen
"sleep 0.2; scrot -s ~/Pictures/Screenshot_$(date +%Y-%m-%d-%k:%M:%S).jpg"
    m:0x4c + c:13
    Control+Alt+Mod4 + 4
"sleep 0.2; scrot -s ~/Pictures/Screenshot_$(date +%Y-%m-%d-%k:%M:%S).jpg"
    m:0x4c + c:13
    Control+Alt+Mod4+Mod5 + 4

#mute and volume keys:
"amixer set Master toggle"
  m:0x10 + c:121
  Mod2 + XF86AudioMute
"amixer -c 0 set Master 1dB+ unmute"
  m:0x10 + c:123
  Mod2 + XF86AudioRaiseVolume
"amixer -c 0 set Master 1dB- unmute"
  m:0x10 + c:122
  Mod2 + XF86AudioLowerVolume
"amixer -c 0 set Master 7dB+ unmute"
  m:0x11 + c:123
  Shift+Mod2 + XF86AudioRaiseVolume
"amixer -c 0 set Master 7dB- unmute"
  m:0x11 + c:122
  Shift+Mod2 + XF86AudioLowerVolume

#sleep and suspend
"sudo pm-suspend"
  m:0x10 + c:150
  Mod2 + XF86Sleep
"sudo pm-hibernate"
  m:0x10 + c:213
  Mod2 + XF86Suspend

#play/pause stop, next, in cmus
"cmus-remote -u"
  m:0x0 + c:172
  XF86AudioPlay

"cmus-remote -s"
  m:0x0 + c:174
  XF86AudioStop

"cmus-remote -n"
  m:0x0 + c:171
  XF86AudioNext

"cmus-remote -r"
  m:0x0 + c:173
  XF86AudioPrev

